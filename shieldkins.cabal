  build-depends:       base >= 4 && < 5
                     , bytestring >= 0.10
                     , lens >= 4
                     , wreq >= 0.1.0.1
                     , scotty >= 0.7.2 && < 1
                     , text >= 1.1.1 && < 2
                     , transformers >= 0.3
  -- hs-source-dirs:
  default-language:    Haskell2010
